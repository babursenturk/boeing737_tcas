Counter8_1_PERIOD_REG:                 equ 0x2d   ; DR1 Period register
Counter8_1_COMPARE_REG:                equ 0x2e   ; DR2 CompareValue register
Counter8_1_CONTROL_REG:                equ 0x2f   ; Control register
Counter8_1_FUNC_REG:                   equ 0x2c   ; Function register
Counter8_1_INPUT_REG:                  equ 0x2d   ; Input register
Counter8_1_OUTPUT_REG:                 equ 0x2e   ; Output register


